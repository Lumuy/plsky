<div class="body-content">
  <div class="row">
    <div class="col-10">
      <div class="post-card-container">
        <% @posts.each do |post| %>
          <%= render partial: 'home/post', locals: { post: post } %>
        <% end %>
      </div>
    </div>
    <div class="col-2 container">
      <% if current_user %>
        <div class="space"></div>
        <%= link_to '发布新主题', new_post_path, class: 'pbtn-primary'%>
      <% end %>
      <div class="space"></div>
      <div class="text-center">
        <%= image_tag 'pljiwuxia.jpg', class: 'rounded', width: '100%' %>
      </div>
    </div>
  </div>
</div>
