<div class="container-fluid signupbox">
  <h1><b class="text-primary">Pl</b>sky</h1>

  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :phone_number, "手机号" %>
      <%= phone_field_tag :phone_number, params[:phone_number], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, "密码" %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <div class="login-submit">
      <%= submit_tag "登陆", class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
