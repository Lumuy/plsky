<div class="body-content">
  <div class="card">
    <div class="card-header">
      创建主题
    </div>
    <div class="card-body">
      <%= form_for @post, url: posts_url, method: :post do |f| %>
        <div class="form-group">
          <%= label_tag '标题' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag '内容' %>
          <%= f.text_area :content, class: 'form-control', rows: '10' %>
        </div>
        <%= f.submit '提交', class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>
