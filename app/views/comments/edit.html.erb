<div class="body-content">
  <div class="card">
    <div class="card-header">
      修改评论
    </div>
    <div class="card-body">
      <%= form_for [@post, @comment] do |f| %>
        <%= f.text_area :body, class: 'form-control', rows: 6, id: 'edit_comment' %>
        <div style="padding-top: 10px;">
          <%= f.submit '修改评论', class: 'btn btn-primary btn-sm' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  var editor = new Simditor({
          textarea: $('#edit_comment'),
          pasteImage: true,
          defaultImage: '<%= image_path "upload-loading.png" %>',
          upload: {url: '/upload'}
      });
</script>
